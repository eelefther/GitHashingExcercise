#!/bin/bash

# Take user input for a 4-digit integer
read -p "Enter a 4-digit integer: " number

# Check if the input is a 4-digit integer
if ! [[ $number =~ ^[0-9]{4}$ ]]; then
    echo "A 4-digit integer is required."
    exit 1
fi

# Hash the input using SHA-256 and save it to hash_output.txt
echo -n "$number" | sha256sum | cut -d ' ' -f 1 > hash_output.txt
echo "Hash generated and saved in hash_output.txt"
